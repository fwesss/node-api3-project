{
  "name": "node-api3-project",
  "version": "1.0.0",
  "description": "Node API 3 Project",
  "keywords": [
    "node",
    "express",
    "blog",
    "api",
    "middleware"
  ],
  "homepage": "https://github.com/LambdaSchool/node-api3-project#readme",
  "bugs": {
    "url": "https://github.com/LambdaSchool/node-api3-project/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LambdaSchool/node-api3-project.git"
  },
  "author": "Lambda School",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "check-format": "yarn run prettier --ignore-path .gitignore --list-different",
    "format": "yarn run prettier --ignore-path .gitignore --write",
    "lint": "eslint --ext .js .",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(json|js)\"",
    "server": "nodemon --experimental-modules --es-module-specifier-resolution=node index.js",
    "start": "node --experimental-modules --es-module-specifier-resolution=node index.js",
    "validate": "npm-run-all --parallel check-format lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.+(js|json|ts)": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "folktale": "^2.3.2",
    "knex": "^0.20.3",
    "sqlite3": "^4.1.1"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-cleanjs": "^4.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-better": "^0.1.5",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-functional": "^3.0.1",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-optimize-regex": "^1.1.7",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.0.10",
    "knex-cleaner": "^1.3.0",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "sort-package-json": "^1.39.0"
  },
  "engines": {
    "node": "13.3.0"
  }
}
